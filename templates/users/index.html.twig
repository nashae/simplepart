{% extends "base.html.twig" %}

{% block title %}page de
	{{users.userName}}
{% endblock %}

{% block body %}
	<div class="container">
		{% for article in users.articles %}
			{% include "articles/_articleindexcard.html.twig" %}

		{% endfor %}
		{% for blog in users.blogArticles %}
			<div class="jumbotron my-3">
				<h1 class="display-5" align="center">{{blog.title}}</h1>
				<hr class="my-4">
				<p>par {{blog.author.userName}} le
					{{blog.createdAt|date('d/m/Y') }}</p>
			</div>
			<p>{{blog.content|raw}}</p>
		{% endfor %}

	</div>
{% endblock %}
