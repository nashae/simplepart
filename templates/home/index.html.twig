{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-9">
				{% for article in articles %}
					<div class="card mb-3">
						<h3 class="card-header">{{article.title}}</h3>
						<div class="card-body">
							<h6 class="card-subtitle text-muted">{{article.subTitle}}</h6>
						</div>
						<img style="height: 300px; width: 100%; display: block;" src="{{article.coverImage}}" alt="Card image">
						<div class="card-body">
							<p class="card-text">
                                {{article.content[:500]|raw}}
                                <a href="#">...</a>
                            </p>
						</div>
						<div class="card-footer text-muted">
							{{article.createdAt | date('d/m/Y')}}
						</div>
					</div>
					
				{% endfor %}

			</div>
			<div class="col-3">
				{% for blog in blogs %}
					<div class="row">
						<h6>{{blog.title}}</h4>
						{{blog.content[:150]|raw}}
						...
						<hr>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
